<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lf_category"
                android:textSize="16dp"
                android:text="Category"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lf_date"
                android:textSize="16dp"
                android:text="Date"
                android:paddingLeft="6dp"
                android:textColor="@color/design_default_color_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lf_address"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="center_vertical"
            android:drawablePadding="6dp"
            android:text="Pune, Mahatrastra, India. 412803"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="32dp"
            android:background="@color/light_gray"/>
        <TextView
            android:paddingHorizontal="8dp"
            android:paddingTop="4dp"
            android:hint="Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginVertical="4dp"
                android:background="@color/design_default_color_primary"/>
            <TextView
                android:id="@+id/lf_details"
                android:layout_width="match_parent"
                android:maxLines="4"
                android:paddingRight="12dp"
                android:paddingLeft="8dp"
                android:paddingVertical="6dp"
                android:textColor="@color/dark_gray"
                android:text="Create onRequestPermissionResult in main class and check if there is a permission then execute the location updates Create onRequestPermissionResult in main class and check if there is a permission then execute the location updates Create onRequestPermissionResult in main class and check if there is a permission then execute the location updates"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>