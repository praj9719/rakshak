<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginVertical="6dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pop_name"
            android:paddingVertical="8dp"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:hint="Name"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="32dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/pop_phone"
            android:paddingVertical="8dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:hint="Contact Number"
            android:inputType="number"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="32dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/pop_email"
            android:paddingVertical="8dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:hint="Email"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="32dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/pop_identity"
            android:paddingVertical="8dp"
            android:drawableLeft="@drawable/ic_identity"
            android:drawablePadding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:hint="Identity Number"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="32dp"
            android:background="@color/light_gray"/>
        <TextView
            android:id="@+id/pop_postcode"
            android:paddingVertical="8dp"
            android:drawableLeft="@drawable/ic_edit"
            android:drawablePadding="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:hint="Postcode"
            android:inputType="number"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="32dp"
            android:background="@color/light_gray"/>
        <TextView
            android:paddingVertical="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="10dp"
            android:gravity="start"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/pop_address"
            android:layout_width="match_parent"
            android:background="@null"
            android:gravity="top"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>